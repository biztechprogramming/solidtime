# Solidtime API Configuration
# Base URL of your Solidtime instance (without trailing slash)
SOLIDTIME_BASE_URL=http://localhost

# API token for authentication
# Generate this from your Solidtime account settings
SOLIDTIME_API_TOKEN=your_api_token_here

# Organization ID to use for API calls
# You can find this in your Solidtime organization settings
SOLIDTIME_ORGANIZATION_ID=your_organization_id_here

# Default member ID for time entries (optional)
# If not set, member_id must be provided for time entry operations
SOLIDTIME_DEFAULT_MEMBER_ID=your_member_id_here